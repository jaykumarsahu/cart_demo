<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Qty.</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.title %></td>
                <td><%= product.quantity %></td>
                <td><%= product.price %></td>
                <td><%= link_to('Add to cart', carts_path(product_id: product.id), method: :post) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

